# VoseMovies Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED
# ============================================================================

# TMDB API Key (get free key at https://www.themoviedb.org/settings/api)
TMDB_API_KEY=your_tmdb_api_key_here

# ============================================================================
# DATABASE (Optional - defaults to SQLite)
# ============================================================================

# SQLite (development - default)
# DATABASE_URL=sqlite:///./vose_movies.db

# PostgreSQL (production - recommended)
# DATABASE_URL=postgresql://username:password@host:5432/database_name

# Example Railway PostgreSQL:
# DATABASE_URL=${{Postgres.DATABASE_URL}}

# Example local PostgreSQL:
# DATABASE_URL=postgresql://vose_user:vose_pass@localhost:5432/vose_movies

# ============================================================================
# API CONFIGURATION (Optional)
# ============================================================================

# API Host (0.0.0.0 allows external access, 127.0.0.1 is localhost only)
API_HOST=0.0.0.0

# API Port
API_PORT=8000

# Enable auto-reload on code changes (development only, disable in production)
API_RELOAD=True

# ============================================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================================

# Development (allow all origins - INSECURE, dev only!)
# CORS_ORIGINS=*

# Production (whitelist your frontend domain)
CORS_ORIGINS=https://your-frontend-domain.com

# Multiple origins (comma-separated)
# CORS_ORIGINS=https://app.vosemovies.com,https://vosemovies.com

# ============================================================================
# SCRAPER CONFIGURATION (Optional)
# ============================================================================

# Run scrapers in headless mode (no browser window)
SCRAPER_HEADLESS=true

# Scraper interval (hours) - how often to refresh showtime data
SCRAPER_INTERVAL_HOURS=4

# Scraper timeout (seconds) - max time per cinema scrape
SCRAPER_TIMEOUT=120

# Debug mode (shows additional scraper logs)
# SCRAPER_DEBUG=false

# ============================================================================
# LOGGING (Optional)
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
# LOG_FILE=logs/vosemovies.log

# ============================================================================
# SECURITY (Production)
# ============================================================================

# Secret key for API token signing (generate with: openssl rand -hex 32)
# API_SECRET_KEY=your_secret_key_here

# Allowed hosts (for HTTPS/reverse proxy setups)
# ALLOWED_HOSTS=api.vosemovies.com,localhost

# ============================================================================
# MONITORING & ERROR TRACKING (Optional)
# ============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://...@sentry.io/...

# Enable performance monitoring
# SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================================================
# RATE LIMITING (Optional)
# ============================================================================

# Requests per minute (per IP)
# RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# CACHING (Optional)
# ============================================================================

# Cache TTL in seconds (how long to cache API responses)
# CACHE_TTL=3600

# ============================================================================
# NOTES
# ============================================================================

# 1. Never commit this file with real values to git!
# 2. For production, use environment variables from your hosting platform
# 3. Railway/DigitalOcean: Set variables in dashboard
# 4. AWS: Use AWS Secrets Manager or Parameter Store
# 5. Docker: Pass via docker-compose.yml or --env-file

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# --- Development (Local) ---
# TMDB_API_KEY=abc123def456
# DATABASE_URL=sqlite:///./vose_movies.db
# API_HOST=127.0.0.1
# API_PORT=8000
# API_RELOAD=True
# CORS_ORIGINS=http://localhost:8081,http://10.0.2.2:8081
# SCRAPER_HEADLESS=false

# --- Production (Railway) ---
# TMDB_API_KEY=${{secrets.TMDB_API_KEY}}
# DATABASE_URL=${{Postgres.DATABASE_URL}}
# API_HOST=0.0.0.0
# API_PORT=8000
# API_RELOAD=False
# CORS_ORIGINS=https://vosemovies.com
# SCRAPER_HEADLESS=true
# SENTRY_DSN=${{secrets.SENTRY_DSN}}

# --- Production (Self-Hosted) ---
# TMDB_API_KEY=abc123def456
# DATABASE_URL=postgresql://vose_user:secure_password@localhost:5432/vose_movies
# API_HOST=0.0.0.0
# API_PORT=8000
# API_RELOAD=False
# CORS_ORIGINS=https://api.vosemovies.com
# SCRAPER_HEADLESS=true
# LOG_FILE=/var/log/vosemovies/app.log
