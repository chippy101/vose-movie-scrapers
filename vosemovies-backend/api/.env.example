# TMDB API Key for fetching movie metadata (posters, ratings, etc.)
# Get your own key at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vose_movies

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS Configuration (for mobile app)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Scraper Configuration
SCRAPER_HEADLESS=True
SCRAPER_INTERVAL_HOURS=4
